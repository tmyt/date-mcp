{
  "name": "date-mcp",
  "version": "1.1.0",
  "description": "MCP server that provides current date/time information to AI agents",
  "main": "dist/entries/cli.js",
  "type": "module",
  "bin": {
    "date-mcp": "./dist/entries/cli.js"
  },
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "tsc",
    "dev": "tsx src/entries/cli.ts",
    "dev:worker": "wrangler dev",
    "start": "node dist/entries/cli.js",
    "test": "echo '{\"jsonrpc\":\"2.0\",\"method\":\"tools/list\",\"id\":1}' | tsx src/index.ts",
    "deploy": "wrangler deploy",
    "deploy:dev": "wrangler deploy --env dev"
  },
  "keywords": [
    "mcp",
    "date",
    "time",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@hono/mcp": "^0.1.0",
    "@hono/node-server": "^1.14.0",
    "@modelcontextprotocol/sdk": "^1.0.6",
    "@types/luxon": "^3.7.1",
    "hono": "^4.8.0",
    "luxon": "^3.7.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/node": "^20.11.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "wrangler": "^4.0.0"
  }
}
